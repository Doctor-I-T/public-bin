#

set -e
if [ $1 == 'commit' -o $1 == 'push' ]; then
  cmd=$1; shift
  dir=$1; shift
  if [ ! -d $dir ]; then
    dir=${dir%/*}
  fi
  \cd $dir
  git $cmd $*
else
for last in "$@"; do true; done
if echo "$last" | grep -q -e '^/'; then
if test -e $last; then
  dir=${last%/*}
  \cd $dir
  echo "cd $(pwd -P); git $*"
fi
fi

 
/usr/bin/git $*

fi
